{
    "url": "wordforms.csv",
    "tableSchema": {
        "columns": [
            {
                "name": "ID",
                "required": true,
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#id",
                "datatype": {
                    "base": "string",
                    "format": "[a-zA-Z0-9_\\-]+"
                }
            },
            {
                "name": "Language_ID",
                "required": true,
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#languageReference",
                "dc:extent": "singlevalued",
                "dc:description": "A reference to a language (or variety) the form belongs to",
                "datatype": "string"
            },
            {
                "name": "Form",
                "required": true,
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#form",
                "dc:extent": "singlevalued",
                "dc:description": "The written expression of the form.",
                "datatype": "string"
            },
            {
                "name": "Parameter_ID",
                "required": true,
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#parameterReference",
                "dc:description": "A reference to the meaning denoted by the form",
                "datatype": "string"
            },
            {
                "name": "Parts",
                "required": false,
                "dc:description": "The form of the stem, segmented into morphs. Necessary for modeling morphologically complex stems.",
                "dc:extent": "multivalued",
                "datatype": "string",
                "separator": " "
            },
            {
                "name": "Stem_ID",
                "required": false,
                "dc:extent": "singlevalued",
                "dc:description": "The stem of which this wordform is an inflected form. References StemTable (stems.csv)",
                "datatype": "string"
            },
            {
                "name": "Description",
                "dc:extent": "singlevalued",
                "required": false,
                "dc:description": "A free translation of the wordform.",
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#description",
                "datatype": "string"
            },
            {
                "name": "Comment",
                "required": false,
                "propertyUrl": "http://cldf.clld.org/v1.0/terms.rdf#comment",
                "datatype": "string"
            }
        ]
    }
}